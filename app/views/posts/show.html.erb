<% provide :title, t("post_detail") %>

<div class="col-md-6 col-md-offset-3", id="show_post">
  <%= link_to t(".edit"), edit_post_path(@post), class: "btn btn-custom" %>
  <%= link_to t(".delete"), @post, method: :delete,
    data: {confirm: t("delete_confirm")}, class: "btn btn-custom" %>
  <h2>Title: <%= @post.title %></h2>
  <h4>Content: <%= @post.content %></h4>
</div>
